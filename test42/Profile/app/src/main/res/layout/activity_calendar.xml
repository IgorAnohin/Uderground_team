<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.example.igor.profile.Calendar">

    <TextView
        android:id="@+id/MyDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:text="Выберите дату для добаления"
        android:textSize="23sp"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"

        />
    
    <LinearLayout
        android:id="@+id/calendarlayout"
        android:background="@drawable/bg_calen"
        android:layout_below="@+id/MyDate"
        android:layout_width="380dp"
        android:layout_height="wrap_content">

        <CalendarView
            android:id="@+id/calendar_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:id="@+id/little_button"
        android:text="Добавить рецепт в планы"
        android:layout_below="@+id/calendarlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>
